<Window x:Class="WpfAppTabeCont.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTabeCont"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Item 1" IsSelected="True">
                <Border Background="LightBlue" CornerRadius="40 40 40 40" BorderThickness="3" BorderBrush="Gray">
                    <Button Content="Button1" Width="100" Height="20" Margin="20, 0,0,0"/>
                </Border>
            </TabItem>
            <TabItem Header="Item 2" HorizontalAlignment="Right" Width="45">
                <GroupBox Height="100" Header="GroupBox" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <StackPanel>
                        <RadioButton Content="cmdPrev"/>
                        <RadioButton Content="cmdNext"/>
                    </StackPanel>
                </GroupBox>
            </TabItem>
            <TabItem Header="Item 3">
                <Button Content="Button2" Width="100" Height="20"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
