<Window x:Class="WpfAppDockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Padding="10" Background="LightBlue">Top</TextBlock>
        <TextBlock DockPanel.Dock="Top" Padding="10" Background="LightCoral">Top</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Padding="10" Background="LightGray">Bottom</TextBlock>
        <TextBlock DockPanel.Dock="Left" Padding="10" Background="LightGoldenrodYellow">Left</TextBlock>
        <TextBlock DockPanel.Dock="Right" Padding="10" Background="LightSteelBlue">Right</TextBlock>
    </DockPanel>
</Window>
