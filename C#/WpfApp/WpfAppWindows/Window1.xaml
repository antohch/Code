<Window x:Class="WpfAppWindows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppWindows"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800" Activated="Window_Activated" GotFocus="Window_GotFocus">
    <Window.Resources>
        <local:ListItemAction x:Key="listItemAction1"/>
    </Window.Resources>
    <StackPanel>
        <ListBox Name="listBox" Height="130" Margin="10" ItemsSource="{Binding Source={StaticResource listItemAction1}, Path=ItemAction}"/>
        <ListBox x:Name="listBox2" Height="300" Margin="10">
        </ListBox>
        <TextBox Margin="10" Name="texBox1" Height="30" Text="{Binding Source={StaticResource listItemAction1}, Path=Str}"></TextBox>
    </StackPanel>
</Window>
