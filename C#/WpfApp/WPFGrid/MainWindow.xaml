<Window x:Class="WPFGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GridSplitter Grid.Column="0" Grid.Row="0" Width="3" Background="Black" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.RowSpan="2" />
        <TextBlock Grid.Row="0" Grid.Column="0" Padding="10" Margin="20" Background="LightCoral">Grid.Row=0 Grid.Colum=0</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Padding="10" Margin="20" Background="LightBlue" Grid.RowSpan="2">Grid.Row=1 Grid.Colum=0</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Padding="10" Margin="20" Background="LightGreen">Grid.Row=0 Grid.Colum=1</TextBlock>
    </Grid>
</Window>
